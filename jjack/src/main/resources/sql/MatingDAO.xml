<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 	"-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace는 연결할 DAO 인터페이스경로.클래스명 -->	
<mapper namespace="com.jjack.web.applicantList.dao.MatingDAO">

	<sql id="gno">
		g_no=(
			SELECT
				g_no
			FROM
				TB_Guest g, TB_Apply a
			WHERE
				g.a_no=a.a_no
				AND a.m_no=#{mno}
				AND a.eventdate=#{edate}
		)
	</sql>

	<!-- 점심 짝 정보 -->
	<update id="lunching" parameterType="string">
		UPDATE
			TB_Guest
		SET
			g_lunch=#{one}
		WHERE
			<include refid="gno" />
	</update>

	<!-- 짝선택시의 이성 목록 -->
	<select id="getLoves" parameterType="matingvo" resultType="matingvo">
		SELECT
			a.a_pic AS pic
			g.g_nick AS nick,
		FROM
			TB_Guest g, TB_Apply a
		WHERE
			a.a_no = g.a_no
			AND sex=<if test="sex eq 'Male'">'F'</if><if test="sex eq 'Female'">'M'</if>
			AND 
	</select>

	<!-- 선택한 짝 정보 -->
	<update id="chooseOne" parameterType="hashMap">
		UPDATE
			TB_Guest
		SET
			g_choice=#{one} 
		WHERE
			<include refid="gno" />
	</update>
	
	<!-- 코스 정보 -->

</mapper>